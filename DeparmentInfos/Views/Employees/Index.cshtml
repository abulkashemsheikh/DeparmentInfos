@model IEnumerable<DeparmentInfos.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EntityDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsExportable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeparmentInfo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <img src="~/uploads/@item.ImagePath" width="50" height="50" />
                <img src="~/uploads//@item.ImagePath" width="50"height="50"

               
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EntityDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsExportable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeparmentInfo.ID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
