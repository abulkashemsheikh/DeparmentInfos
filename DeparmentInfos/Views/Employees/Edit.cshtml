@model DeparmentInfos.Models.Employee

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit"
              enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
               <input type="file" id="Image" name="Image" class="form-control" />
               <img src="~/uploads/@Model.ImagePath" width="50" height="50" />
                <img src="~/uploads/@Model.ImagePath" width="50"height="50" />
                <img src="~/uploads//@Model.ImagePath"width="50"height="50"
            </div>
            <div class="form-group">
                <label asp-for="EntityDate" class="control-label"></label>
                <input asp-for="EntityDate" class="form-control" />
                <span asp-validation-for="EntityDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsExportable" /> @Html.DisplayNameFor(model => model.IsExportable)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentInfoID" class="control-label"></label>
                <select asp-for="DepartmentInfoID" class="form-control" asp-items="ViewBag.DepartmentInfoID"></select>
                <span asp-validation-for="DepartmentInfoID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
